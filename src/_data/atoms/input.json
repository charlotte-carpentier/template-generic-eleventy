{
  "// Component": "Input - Form inputs with validation and multiple types",
  "// Security": "autocomplete (WCAG 1.3.5) + patterns (OWASP validation)",
  "_meta": {
    "component": "input",
    "type": "atom",
    "version": "1.1.0",
    "created": "2025-01-15",
    "updated": "2026-02-03",
    "availableTypes": [
      "text",
      "email",
      "tel",
      "password",
      "textarea",
      "select",
      "multiselect",
      "date",
      "phone",
      "panel"
    ]
  },
  "inputs": [
    {
      "name": "demoInput1",
      "type": "text",
      "id": "demoInput1",
      "label": "Label",
      "placeholder": "Placeholder",
      "required": true,
      "maxLength": 100,
      "pattern": "^[\\p{L}\\p{N}\\s'-]+$",
      "patternMessage": "Letters, numbers, spaces, hyphens and apostrophes only",
      "errorMessage": "Label",
      "autocomplete": "name"
    },
    {
      "name": "demoInput2",
      "type": "select",
      "id": "demoInput2",
      "label": "Label",
      "selectName": "demoSelect1",
      "required": true,
      "errorMessage": "Label"
    },
    {
      "name": "demoInput3",
      "type": "multiselect",
      "id": "demoInput3",
      "label": "Label",
      "required": true,
      "errorMessage": "Label",
      "chipMulti": {
        "text": "Label",
        "variant": "default",
        "selected": true,
        "removable": true,
        "ariaLabel": "Remove Label"
      }
    },
    {
      "name": "demoInput4",
      "type": "date",
      "id": "demoInput4",
      "label": "Label",
      "placeholder": "dd/mm/yyyy",
      "required": true,
      "errorMessage": "Label",
      "autocomplete": "bday"
    },
    {
      "name": "demoInput5",
      "type": "phone",
      "id": "demoInput5",
      "label": "Label",
      "placeholder": "Placeholder",
      "required": true,
      "maxLength": 15,
      "errorMessage": "Label",
      "pattern": "^\\+?[1-9]\\d{1,14}$",
      "patternMessage": "Please enter a valid phone number (e.g., +33612345678)",
      "autocomplete": "tel"
    },
    {
      "name": "demoInput6",
      "type": "panel",
      "id": "demoInput6",
      "label": "Label",
      "placeholder": "Placeholder",
      "required": true,
      "errorMessage": "Label"
    },
    {
      "name": "demoInput7",
      "type": "textarea",
      "id": "demoInput7",
      "label": "Label",
      "placeholder": "Placeholder",
      "required": true,
      "maxLength": 500,
      "rows": 4,
      "errorMessage": "Label"
    },
    {
      "name": "contactName",
      "type": "text",
      "id": "contactName",
      "label": "Full Name",
      "placeholder": "John Doe",
      "required": true,
      "maxLength": 100,
      "pattern": "^[\\p{L}\\s'-]+$",
      "patternMessage": "Letters, spaces, hyphens and apostrophes only",
      "errorMessage": "Full Name",
      "autocomplete": "name"
    },
    {
      "name": "contactEmail",
      "type": "email",
      "id": "contactEmail",
      "label": "Email",
      "placeholder": "john.doe@example.com",
      "required": true,
      "pattern": "^[\\w._%+-]+@[\\w.-]+\\.[a-zA-Z]{2,}$",
      "patternMessage": "Please enter a valid email address",
      "errorMessage": "Email",
      "autocomplete": "email"
    },
    {
      "name": "contactPhone",
      "type": "tel",
      "id": "contactPhone",
      "label": "Phone Number",
      "placeholder": "+33612345678",
      "required": false,
      "maxLength": 15,
      "pattern": "^\\+?[1-9]\\d{1,14}$",
      "patternMessage": "Please enter a valid phone number (international format)",
      "errorMessage": "Phone Number",
      "autocomplete": "tel"
    },
    {
      "name": "contactMessage",
      "type": "textarea",
      "id": "contactMessage",
      "label": "Message",
      "placeholder": "Your message here...",
      "required": true,
      "maxLength": 1000,
      "rows": 6,
      "errorMessage": "Message"
    },
    {
      "name": "contactCompany",
      "type": "text",
      "id": "contactCompany",
      "label": "Company",
      "placeholder": "Acme Inc.",
      "required": false,
      "maxLength": 100,
      "pattern": "^[\\p{L}\\p{N}\\s'-&.]+$",
      "patternMessage": "Letters, numbers, spaces and common punctuation only",
      "errorMessage": "Company",
      "autocomplete": "organization"
    },
    {
      "name": "contactSubject",
      "type": "select",
      "id": "contactSubject",
      "label": "Subject",
      "selectName": "contactSubjectSelect",
      "required": true,
      "errorMessage": "Subject"
    }
  ]
}