{
  "// Component": "Input - Form inputs with validation and multiple types",
  
  "_meta": {
    "component": "input",
    "type": "atom",
    "version": "1.0.0",
    "created": "2025-01-15"
  },
  
  "inputs": [
    {
      "name": "demoInput1",
      "type": "text",
      "id": "demoInput1",
      "label": "Label",
      "placeholder": "Placeholder",
      "required": true,
      "maxLength": 100,
      "pattern": "^[a-zA-Z0-9]*$",
      "patternMessage": "Pattern validation message",
      "errorMessage": "Label"
    },
    {
      "name": "demoInput2",
      "type": "select",
      "id": "demoInput2",
      "label": "Label",
      "selectName": "demoSelect1",
      "required": true,
      "errorMessage": "Label"
    },
    {
      "name": "demoInput3",
      "type": "multiselect",
      "id": "demoInput3",
      "label": "Label",
      "required": true,
      "errorMessage": "Label",
      "chipMulti": {
        "text": "Label",
        "variant": "default",
        "selected": true,
        "removable": true,
        "ariaLabel": "Remove Label"
      }
    },
    {
      "name": "demoInput4",
      "type": "date",
      "id": "demoInput4",
      "label": "Label",
      "placeholder": "dd/mm/yyyy",
      "required": true,
      "errorMessage": "Label"
    },
    {
      "name": "demoInput5",
      "type": "phone",
      "id": "demoInput5",
      "label": "Label",
      "placeholder": "Placeholder",
      "required": true,
      "maxLength": 15,
      "errorMessage": "Label"
    },
    {
      "name": "demoInput6",
      "type": "panel",
      "id": "demoInput6",
      "label": "Label",
      "placeholder": "Placeholder",
      "required": true,
      "errorMessage": "Label"
    },
    {
      "name": "demoInput7",
      "type": "textarea",
      "id": "demoInput7",
      "label": "Label",
      "placeholder": "Placeholder",
      "required": true,
      "maxLength": 500,
      "rows": 4,
      "errorMessage": "Label"
    }
  ]
}