{% from "02-molecules/lock-up.njk" import renderLockup %}

{% macro renderListValue(options) %}

  {# ━━━━━━━━━━━━━━━━━━━━━━━━━━
    1. Validate Props
  ━━━━━━━━━━━━━━━━━━━━━━━━━ #}
  {% if not options.datas %}
    <span class="error" role="alert">Error: Missing required prop (datas)</span>
  {% elif not options.name %}
    <span class="error" role="alert">Error: Missing required prop (name)</span>
  {% else %}
    {# Find list value using universal filter #}
    {% set listData = options.datas | findByName(options.name) %}

    {# Render list value or error message #}
    {% if not listData %}
      <span class="error" role="alert">List value not found: {{ options.name }}</span>
    {% else %}

      {# ━━━━━━━━━━━━━━━━━━━━━━━━━━
        2. Compute Final Values
      ━━━━━━━━━━━━━━━━━━━━━━━━━ #}
      {% set variant = options.variant | default(listData.variant) | default('default') %}
      {% set items = listData.items | default([]) %}

      {# ━━━━━━━━━━━━━━━━━━━━━━━━━━
        3. Tailwind Classes
        Index:
        3.1 Wrapper Classes
        3.2 Item Classes
      ━━━━━━━━━━━━━━━━━━━━━━━━━ #}

      {# --------------------------
          3.1 Wrapper Classes
          Description: Layout, Spacing
        --------------------------#}
      {% set containerMap = {
        'default': 'flex flex-col gap-[var(--spacing-ui-default)]',
        'horizontal': 'flex flex-col md:flex-row gap-[var(--spacing-ui-default)] md:gap-[var(--spacing-ui-default)]'
      } %}
      {% set containerClasses = containerMap[variant] | default(containerMap['default']) %}

      {# --------------------------
          3.2 Item Classes
          Description: Layout
        --------------------------#}
      {% set itemClasses = "" %}

      {# ━━━━━━━━━━━━━━━━━━━━━━━━━━
        4. Render HTML
      ━━━━━━━━━━━━━━━━━━━━━━━━━ #}
      <div
        class="{{ containerClasses }}"
        data-list-value-name="{{ listData.name }}"
        data-list-value-type="list-value"
        data-list-value-variant="{{ variant }}"
      >
        {% for item in items %}
          <div
            class="{{ itemClasses }}"
            data-list-value-item="true"
          >
            {# Render lockup #}
            {{ renderLockup({
                name: item.lockupName,
                datas: options.lockupDatas
            }) }}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  {% endif %}
{% endmacro %}

