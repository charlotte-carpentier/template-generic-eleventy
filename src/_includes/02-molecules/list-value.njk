{% from "02-molecules/lock-up.njk" import renderLockup %}

{% macro renderListValue(options) %}
  {# Validate required props #}
  {% if not options.datas %}
    <span class="error" role="alert">Error: Missing required prop (datas)</span>
  {% elif not options.id %}
    <span class="error" role="alert">Error: Missing required prop (id)</span>
  {% else %}
    {# Find list value using universal filter #}
    {% set listData = options.datas | findByName(options.id) %}

    {# Render or error #}
    {% if not listData %}
      <span class="error" role="alert">List value not found: {{ options.id }}</span>
    {% else %}
      <div
        data-list-value-id="{{ listData.id }}"
        data-list-value-type="list-value"
      >
        {% for item in listData.items %}
          <div data-list-value-item="true">
            {# Render lockup #}
            {{ renderLockup({
                name: item.lockupName,
                datas: options.lockupDatas
            }) }}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  {% endif %}
{% endmacro %}

