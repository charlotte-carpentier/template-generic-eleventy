{% from "01-atoms/icon.njk" import renderIcon %}

{% macro renderToast(options) %}

  {# ━━━━━━━━━━━━━━━━━━━━━━━━━━
    1. Validate Props
  ━━━━━━━━━━━━━━━━━━━━━━━━━ #}
  {% if not options.datas %}
    <span class="error" role="alert">Error: Missing required prop (datas)</span>
  {% elif not options.name %}
    <span class="error" role="alert">Error: Missing required prop (name)</span>
  {% else %}
    {# Find toast using universal filter #}
    {% set toastData = options.datas | findByName(options.name) %}

    {# Render toast or error message #}
    {% if not toastData %}
      <span class="error" role="alert">Toast not found: {{ options.name }}</span>
    {% else %}

      {# ━━━━━━━━━━━━━━━━━━━━━━━━━━
        2. Compute Final Values
      ━━━━━━━━━━━━━━━━━━━━━━━━━ #}
      {% set toastName = toastData.name | default(options.name) %}
      {% set message = toastData.message | default('') %}
      {% set variant = toastData.variant | default('info') %}
      {% set iconName = toastData.iconName | default('') %}
      {% set closeIconName = toastData.closeIconName | default('') %}
      {% set duration = toastData.duration | default(5000) %}
      {% set dismissible = toastData.dismissible | default(true) %}

      {# ━━━━━━━━━━━━━━━━━━━━━━━━━━
        3. Tailwind Classes
        Index:
        3.1 Wrapper Classes
        3.2 Content Wrapper Classes
        3.3 Icon Wrapper Classes
        3.4 Message Classes
        3.5 Close Button Classes
      ━━━━━━━━━━━━━━━━━━━━━━━━━ #}

      {# --------------------------
          3.1 Wrapper Classes
          Description: Layout, Background, Borders, Shadow
        --------------------------#}
      {% set containerClasses = "flex min-w-80 max-w-md bg-[var(--color-global-white)] rounded-[var(--radius-card)] shadow-lg p-[var(--spacing-inset-small)]" %}

      {# --------------------------
          3.2 Content Wrapper Classes
          Description: Layout horizontal, Spacing, Alignment
        --------------------------#}
      {% set contentWrapperClasses = "flex items-center gap-[var(--spacing-inline-medium)] w-full" %}

      {# --------------------------
          3.3 Icon Wrapper Classes
          Description: Layout, Colors by variant
        --------------------------#}
      {% set iconWrapperBaseClasses = "flex-shrink-0 inline-flex items-center" %}

      {% set iconVariantMap = {
        'info': 'text-[var(--color-semantic-information)]',
        'success': 'text-[var(--color-semantic-success)]',
        'warning': 'text-[var(--color-semantic-warning)]',
        'error': 'text-[var(--color-semantic-critical)]'
      } %}
      {% set iconVariantClasses = iconVariantMap[variant] or iconVariantMap['info'] %}

      {# --------------------------
          3.4 Message Classes
          Description: Typography, Colors, Layout
        --------------------------#}
      {% set messageClasses = "typography-body-regular text-[var(--color-global-default)] flex-1" %}

      {# --------------------------
          3.5 Close Button Classes
          Description: Layout, Size, Borders
        --------------------------#}
      {% set closeButtonBaseClasses = "flex-shrink-0 inline-flex items-center justify-center w-6 h-6 ml-[var(--spacing-inline-large)] bg-transparent border-0 cursor-pointer" %}
      {% set closeButtonStateClasses = "text-[var(--color-global-default)] transition-colors hover:text-[var(--color-global-contrast-light-01)] focus:outline-none focus:ring-2 focus:ring-[var(--color-semantic-information-focus)]" %}

      {# ━━━━━━━━━━━━━━━━━━━━━━━━━━
        4. Render HTML
      ━━━━━━━━━━━━━━━━━━━━━━━━━ #}
      <div
        class="{{ containerClasses }}"
        data-toast-name="{{ toastName }}"
        data-toast-type="toast"
        data-toast-variant="{{ variant }}"
        {% if duration %}data-toast-duration="{{ duration }}"{% endif %}
        aria-live="polite"
        role="status"
      >
        <div
          class="{{ contentWrapperClasses }}"
          data-toast-content="true"
        >
          {# Icon (if present) #}
          {% if iconName and options.iconDatas %}
            <div
              class="{{ iconWrapperBaseClasses }} {{ iconVariantClasses }}"
              data-toast-icon="true"
            >
              {{ renderIcon({
                  name: iconName,
                  datas: options.iconDatas
              }) }}
            </div>
          {% endif %}

          {# Message #}
          <span
            class="{{ messageClasses }}"
            data-toast-message="true"
          >
            {{ message }}
          </span>

          {# Close button (if dismissible) #}
          {% if dismissible %}
            <button
              type="button"
              class="{{ closeButtonBaseClasses }} {{ closeButtonStateClasses }}"
              data-toast-dismiss="true"
              aria-label="Dismiss notification"
            >
              {% if closeIconName and options.iconDatas %}
                {{ renderIcon({
                    name: closeIconName,
                    datas: options.iconDatas
                }) }}
              {% else %}
                &times;
              {% endif %}
            </button>
          {% endif %}
        </div>
      </div>
    {% endif %}
  {% endif %}
{% endmacro %}

