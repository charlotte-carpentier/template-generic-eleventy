{% from "01-atoms/icon.njk" import renderIcon %}

{% macro renderToast(options) %}
  {# Validate required props #}
  {% if not options.datas %}
    <span class="error" role="alert">Error: Missing required prop (datas)</span>
  {% elif not options.name %}
    <span class="error" role="alert">Error: Missing required prop (name)</span>
  {% else %}
    {# Find toast using universal filter #}
    {% set toastData = options.datas | findByName(options.name) %}

    {# Render or error #}
    {% if not toastData %}
      <span class="error" role="alert">Toast not found: {{ options.name }}</span>
    {% else %}
      <div
        data-toast-name="{{ toastData.name }}"
        data-toast-type="toast"
        data-toast-variant="{{ toastData.variant }}"
        {% if toastData.duration %}data-toast-duration="{{ toastData.duration }}"{% endif %}
        aria-live="polite"
        role="status"
      >
        <div data-toast-content="true">
          {# Icon (if present) #}
          {% if toastData.iconName and options.iconDatas %}
            <div data-toast-icon="true">
              {{ renderIcon({
                  name: toastData.iconName,
                  datas: options.iconDatas
              }) }}
            </div>
          {% endif %}

          {# Message #}
          <span data-toast-message="true">
            {{ toastData.message }}
          </span>

          {# Close button (if dismissible) #}
          {% if toastData.dismissible %}
            <button
              type="button"
              data-toast-dismiss="true"
              aria-label="Dismiss notification"
            >
              &times;
            </button>
          {% endif %}
        </div>
      </div>
    {% endif %}
  {% endif %}
{% endmacro %}

