{% from "01-atoms/image.njk" import renderImage %}
{% from "01-atoms/heading.njk" import renderHeading %}

{% macro renderLockup(options) %}

  {# ━━━━━━━━━━━━━━━━━━━━━━━━━━
    1. Validate Props
  ━━━━━━━━━━━━━━━━━━━━━━━━━ #}
  {% if not options.datas %}
    <span class="error" role="alert">Error: Missing required prop (datas)</span>
  {% elif not options.name %}
    <span class="error" role="alert">Error: Missing required prop (name)</span>
  {% else %}
    {# Find lockup using universal filter #}
    {% set lockupData = options.datas | findByName(options.name) %}

    {# Render lockup or error message #}
    {% if not lockupData %}
      <span class="error" role="alert">Lockup not found: {{ options.name }}</span>
    {% else %}

      {# ━━━━━━━━━━━━━━━━━━━━━━━━━━
        2. Compute Final Values
      ━━━━━━━━━━━━━━━━━━━━━━━━━ #}
      {% set lockupType = lockupData.type | default('default') %}
      {% set lockupVariant = lockupData.variant | default('vertical') %}

      {# Default type values #}
      {% set labelText = lockupData.label.text | default('') if lockupData.label else '' %}
      {% set valueText = lockupData.value.text | default('') if lockupData.value else '' %}

      {# Value-legend type values #}
      {% set legendText = lockupData.legend.text | default('') if lockupData.legend else '' %}

      {# Block-content type values #}
      {% set imageName = lockupData.imageName | default('') %}
      {% set headingName = lockupData.headingName | default('') %}
      {% set contentText = lockupData.content.text | default('') if lockupData.content else '' %}

      {# ━━━━━━━━━━━━━━━━━━━━━━━━━━
        3. Tailwind Classes
        Index:
        3.1 Wrapper Classes
        3.2 Label Classes
        3.3 Value Classes
        3.4 Legend Classes
        3.5 Image Wrapper Classes
        3.6 Content Wrapper Classes
        3.7 Text Classes
      ━━━━━━━━━━━━━━━━━━━━━━━━━ #}

      {# --------------------------
          3.1 Wrapper Classes
          Description: Layout
        --------------------------#}
      {% set containerDefaultMap = {
        'horizontal': 'flex flex-row items-center gap-[var(--spacing-ui-minimal)]',
        'vertical': 'flex flex-col gap-[var(--spacing-micro-minimal)]',
        'small-horizontal': 'flex flex-row items-center gap-[var(--spacing-ui-minimal)]',
        'small-vertical': 'flex flex-col gap-[var(--spacing-micro-minimal)]'
      } %}

      {% set containerTypeMap = {
        'default': containerDefaultMap[lockupVariant] | default(containerDefaultMap['vertical']),
        'value-legend': 'flex flex-col gap-[var(--spacing-micro-minimal)]',
        'block-content': 'flex flex-col md:flex-row gap-[var(--spacing-ui-default)] md:gap-[var(--spacing-ui-default)]'
      } %}
      {% set containerClasses = containerTypeMap[lockupType] | default(containerTypeMap['default']) %}

      {# --------------------------
          3.2 Label Classes
          Description: Typography, Colors
        --------------------------#}
      {% set labelClasses = "font-body text-sm text-[var(--color-global-contrast-light-02)]" %}

      {# --------------------------
          3.3 Value Classes
          Description: Typography, Colors
        --------------------------#}
      {% set valueClasses = "font-body text-body text-[var(--color-global-default)]" %}

      {# --------------------------
          3.4 Legend Classes
          Description: Typography, Colors
        --------------------------#}
      {% set legendClasses = "font-body text-sm text-[var(--color-global-contrast-light-02)]" %}

      {# --------------------------
          3.5 Image Wrapper Classes
          Description: Sizing, Layout, Child image styling override
        --------------------------#}
      {% set imageWrapperClasses = "flex-shrink-0 w-full md:w-20 h-auto md:h-20 [&_img]:w-full [&_img]:h-full [&_img]:object-cover" %}

      {# --------------------------
          3.6 Content Wrapper Classes
          Description: Layout, Spacing
        --------------------------#}
      {% set contentWrapperClasses = "flex flex-col gap-[var(--spacing-micro-minimal)] flex-1" %}

      {# --------------------------
          3.7 Text Classes
          Description: Typography, Colors
        --------------------------#}
      {% set textClasses = "font-body text-body text-[var(--color-global-default)]" %}

      {# ━━━━━━━━━━━━━━━━━━━━━━━━━━
        4. Render HTML
      ━━━━━━━━━━━━━━━━━━━━━━━━━ #}
      <div
        class="{{ containerClasses }}"
        data-lockup-name="{{ lockupData.name }}"
        data-lockup-type="{{ lockupType }}"
      >
        {# Default type (label-value) #}
        {% if lockupType == "default" %}
          {% if labelText %}
            <span
              class="{{ labelClasses }}"
              data-lockup-label="true"
            >
              {{ labelText }}
            </span>
          {% endif %}
          {% if valueText %}
            <span
              class="{{ valueClasses }}"
              data-lockup-value="true"
            >
              {{ valueText }}
            </span>
          {% endif %}

        {# Value-Legend type #}
        {% elif lockupType == "value-legend" %}
          {% if valueText %}
            <span
              class="{{ valueClasses }}"
              data-lockup-value="true"
            >
              {{ valueText }}
            </span>
          {% endif %}
          {% if legendText %}
            <span
              class="{{ legendClasses }}"
              data-lockup-legend="true"
            >
              {{ legendText }}
            </span>
          {% endif %}

        {# Block-Content type #}
        {% elif lockupType == "block-content" %}
          {# Image column #}
          {% if imageName and options.imageDatas %}
            <div
              class="{{ imageWrapperClasses }}"
              data-lockup-image="true"
            >
              {{ renderImage({
                  name: imageName,
                  datas: options.imageDatas,
                  iconDatas: options.iconDatas
              }) }}
            </div>
          {% endif %}

          {# Content column #}
          <div
            class="{{ contentWrapperClasses }}"
            data-lockup-content="true"
          >
            {# Heading #}
            {% if headingName and options.headingDatas %}
              {{ renderHeading({
                  name: headingName,
                  datas: options.headingDatas
              }) }}
            {% endif %}

            {# Content text #}
            {% if contentText %}
              <p
                class="{{ textClasses }}"
                data-lockup-text="true"
              >
                {{ contentText }}
              </p>
            {% endif %}
          </div>
        {% endif %}
      </div>
    {% endif %}
  {% endif %}
{% endmacro %}

