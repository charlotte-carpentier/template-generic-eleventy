   │ ORGANISM › Section Article Hero                         │
   │ Hero section for article pages with image and heading   │
   └─────────────────────────────────────────────────────────┘ #}

{#
  Props:
    - options.name (string): Section identifier
    - options.datas (array): Section configuration data
    - options.imageDatas (array): Image atom data
    - options.headingDatas (array): Heading atom data

  Usage — Summon HAT Components Wisely:
    {% from "03-organisms/section-article-hero.njk" import renderSectionArticleHero %}

    {{ renderSectionArticleHero({
        name: "demoSectAH1",
        datas: organisms["section-article-hero"].sectArtHero,
        imageDatas: atoms.image.images,
        headingDatas: atoms.heading.headings
    }) }}

  @created 2025-01-15
#}

{% macro renderSectionArticleHero(options) %}
  {# Import sub-components #}
  {% from "01-atoms/heading.njk" import renderHeading %}
  {% from "01-atoms/image.njk" import renderImage %}

  {# ━━━━━━━━━━━━━━━━━━━━━━━━━━
    1. Validate Props
  ━━━━━━━━━━━━━━━━━━━━━━━━━ #}
  {% if not options.datas %}
    <span class="error" role="alert">Error: Missing required prop (datas)</span>
  {% elif not options.name %}
    <span class="error" role="alert">Error: Missing required prop (name)</span>
  {% else %}
    {# Find section using universal filter #}
    {% set sectionData = options.datas | findByName(options.name) %}

    {# Render section or error message #}
    {% if not sectionData %}
      <span class="error" role="alert">Section not found: {{ options.name }}</span>
    {% else %}

      {# ━━━━━━━━━━━━━━━━━━━━━━━━━━
        2. Compute Final Values
      ━━━━━━━━━━━━━━━━━━━━━━━━━ #}
      {% set sectionName = sectionData.name | default(options.name) %}
      {% set imageName = sectionData.imageName | default('') %}
      {% set headingName = sectionData.headingName | default('') %}
      {% set ariaLabel = sectionData.ariaLabel | default('Article hero section') %}

      {# ━━━━━━━━━━━━━━━━━━━━━━━━━━
        3. Tailwind Classes
        Index:
        3.1 Section Wrapper Classes
        3.2 Content Wrapper Classes
        3.3 Image Wrapper Classes
        3.4 Heading Wrapper Classes
      ━━━━━━━━━━━━━━━━━━━━━━━━━ #}

      {# --------------------------
          3.1 Section Wrapper Classes
          Description: Layout, Spacing, Background
        --------------------------#}
      {% set sectionClasses = "flex flex-col px-[var(--spacing-6)] py-[var(--spacing-8)] bg-[var(--color-global-white)] md:px-[var(--spacing-10)] md:py-[var(--spacing-12)]" %}

      {# --------------------------
          3.2 Content Wrapper Classes
          Description: Layout, Sizing max-width centered desktop, Spacing
        --------------------------#}
      {% set containerClasses = "flex flex-col gap-[var(--spacing-6)] w-full md:max-w-[var(--column-width-840)] md:mx-auto" %}

      {# --------------------------
          3.3 Image Wrapper Classes
          Description: Layout, Image override aspect-ratio 16:9 with object-cover
      --------------------------#}
      {% set imageClasses = "flex [&_img]:w-full [&_img]:aspect-video [&_img]:object-cover" %}

      {# --------------------------
          3.4 Heading Wrapper Classes
          Description: Layout, Typography override serif
        --------------------------#}
      {% set headingClasses = "flex [&_h1]:typography-h1-serif [&_h2]:typography-h2-serif [&_h3]:typography-h3-serif" %}

      {# ━━━━━━━━━━━━━━━━━━━━━━━━━━
        4. Render HTML
      ━━━━━━━━━━━━━━━━━━━━━━━━━ #}
      <section
        class="{{ sectionClasses }}"
        aria-label="{{ ariaLabel }}"
        data-section-name="{{ sectionName }}"
        data-section-type="section-article-hero"
      >

        <div
          class="{{ containerClasses }}"
          data-section-container
        >

          {# Hero image #}
          {% if imageName %}
            <div
              class="{{ imageClasses }}"
              data-section-image
            >
              {{ renderImage({
                  name: imageName,
                  datas: options.imageDatas
              }) }}
            </div>
          {% endif %}

          {# Hero heading #}
          {% if headingName %}
            <div
              class="{{ headingClasses }}"
              data-section-heading
            >
              {{ renderHeading({
                  name: headingName,
                  datas: options.headingDatas
              }) }}
            </div>
          {% endif %}

        </div>

      </section>
    {% endif %}
  {% endif %}
{% endmacro %}

