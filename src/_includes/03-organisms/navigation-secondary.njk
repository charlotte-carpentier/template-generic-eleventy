{#
  Props:
    - options.name (string): Navigation identifier
    - options.datas (object): Navigation configurations
    - options.links (object): Links data source
    - options.class (string): Additional CSS classes
  
  Usage:
    {% from "03-organisms/navigation-secondary.njk" import renderNavigationSecondary %}
    
    {{ renderNavigationSecondary({ 
      name: "main",
      datas: organisms["navigation-secondarys"],
      links: atoms.links
    }) }}
  
  Features:
    - Auto-selects first navigation if name not found
    - Applies global styles from configuration
    - Data attributes for secondary nav identification
    - Custom spacing support via class prop
  
  @created 2025-01-15
#}

{% from "01-atoms/link.njk" import linkComponent %}

{% macro renderNavigationSecondary(options) %}
  {% if options.datas %}
    {% set globalStyle = options.datas.globalStyle %}
    
    {% set navigationData = null %}
    {% if options.name %}
      {% for navSet in options.datas["navigation-secondarys"] %}
        {% if navSet.name == options.name %}
          {% set navigationData = navSet %}
        {% endif %}
      {% endfor %}
    {% endif %}

    {% if not navigationData %}
      {% set navigationData = options.datas["navigation-secondarys"][0] %}
    {% endif %}
    
    <nav class="{{ globalStyle }} {{ options.class | default('') }}" data-nav-container data-nav-secondary>
      {% for linkName in navigationData.links %}
        {{ linkComponent({ name: linkName, datas: options.links, dataNavLink: true }) }}
      {% endfor %}
    </nav>
  {% else %}
    <span class="">Navigation data not found</span>
  {% endif %}
{% endmacro %}

