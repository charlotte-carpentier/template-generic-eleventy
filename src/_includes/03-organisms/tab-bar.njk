   │ ORGANISM › Tab Bar                                      │
   │ Navigation tab bar with active state management         │
   └─────────────────────────────────────────────────────────┘ #}

{#
  Props:
    - options.name (string): Tab bar identifier
    - options.datas (array): Tab bar configuration data
    - options.linkDatas (array): Link atom data
    - options.iconDatas (array): Icon atom data (optional, required if links have icons)
    - options.tooltipDatas (array): Tooltip atom data (optional, required if links have tooltips)

  Usage — Summon HAT Components Wisely:
    {% from "03-organisms/tab-bar.njk" import renderTabBar %}

    {{ renderTabBar({
        name: "demoTabBar1",
        datas: organisms["tab-bar"].tabBars,
        linkDatas: atoms.link.links,
        iconDatas: atoms.icon.icons,
        tooltipDatas: atoms.tooltip.tooltips
    }) }}

  JavaScript: utils/active-link.js

  @created 2025-01-15
#}

{% macro renderTabBar(options) %}
  {# Import sub-component #}
  {% from "01-atoms/link.njk" import renderLink %}

  {# ━━━━━━━━━━━━━━━━━━━━━━━━━━
    1. Validate Props
  ━━━━━━━━━━━━━━━━━━━━━━━━━ #}
  {% if not options.datas %}
    <span class="error" role="alert">Error: Missing required prop (datas)</span>
  {% elif not options.name %}
    <span class="error" role="alert">Error: Missing required prop (name)</span>
  {% else %}
    {# Find tab bar using universal filter #}
    {% set tabBarData = options.datas | findByName(options.name) %}

    {# Render tab bar or error message #}
    {% if not tabBarData %}
      <span class="error" role="alert">Tab bar not found: {{ options.name }}</span>
    {% else %}

      {# ━━━━━━━━━━━━━━━━━━━━━━━━━━
        2. Compute Final Values
      ━━━━━━━━━━━━━━━━━━━━━━━━━ #}
      {% set tabBarName = tabBarData.name | default(options.name) %}
      {% set items = tabBarData.items | default([]) %}
      {% set ariaLabel = tabBarData.ariaLabel | default('Navigation tabs') %}

      {# ━━━━━━━━━━━━━━━━━━━━━━━━━━
        3. Tailwind Classes
        Index:
        3.1 Wrapper Classes
        3.2 List Classes
        3.3 Item Classes
        3.4 Link Classes (by state)
      ━━━━━━━━━━━━━━━━━━━━━━━━━ #}

      {# --------------------------
          3.1 Wrapper Classes
          Description: Layout
        --------------------------#}
      {% set navClasses = "flex" %}

      {# --------------------------
          3.2 List Classes
          Description: Layout horizontal, Spacing
        --------------------------#}
      {% set listClasses = "flex gap-[var(--spacing-inline-large)]" %}

      {# --------------------------
          3.3 Item Classes
          Description: Layout
        --------------------------#}
      {% set listItemClasses = "flex" %}

      {# --------------------------
          3.4 Link Classes (by state)
          Description: Colors, States, Pseudo-elements for tabs
        --------------------------#}

      {% set linkBaseClasses = "[&_a]:relative [&_a]:px-[var(--spacing-inset-tight)] [&_a]:py-[var(--spacing-inset-tight)] [&_a]:pb-[var(--spacing-inset-tight)] [&_a]:typography-body-regular [&_a]:text-[var(--color-global-default)] [&_a]:no-underline [&_a]:transition-colors" %}

      {% set linkHoverClasses = "[&_a:hover:not([aria-current])]:text-[var(--color-global-contrast-light-01)] [&_a:hover:not([aria-current])]:after:content-['•'] [&_a:hover:not([aria-current])]:after:absolute [&_a:hover:not([aria-current])]:after:bottom-0 [&_a:hover:not([aria-current])]:after:translate-y-[8px] [&_a:hover:not([aria-current])]:after:left-1/2 [&_a:hover:not([aria-current])]:after:-translate-x-1/2" %}

      {% set linkFocusClasses = "[&_a:focus]:outline [&_a:focus]:outline-2 [&_a:focus]:outline-[var(--color-semantic-information-focus)] [&_a:focus]:rounded-[var(--radius-default)]" %}

      {% set linkActiveClasses = "[&_a[aria-current='page']]:text-[var(--color-global-contrast-light-02)] [&_a[aria-current='page']]:cursor-default [&_a[aria-current='page']]:after:content-[''] [&_a[aria-current='page']]:after:absolute [&_a[aria-current='page']]:after:bottom-[calc(var(--spacing-inline-tight)*-1)] [&_a[aria-current='page']]:after:left-1/2 [&_a[aria-current='page']]:after:-translate-x-1/2 [&_a[aria-current='page']]:after:h-1 [&_a[aria-current='page']]:after:w-4 [&_a[aria-current='page']]:after:bg-[var(--color-global-contrast-light-02)] [&_a[aria-current='page']]:after:rounded-[var(--radius-default)]" %}

      {# ━━━━━━━━━━━━━━━━━━━━━━━━━━
        4. Render HTML
      ━━━━━━━━━━━━━━━━━━━━━━━━━ #}
      <nav
        class="{{ navClasses }}"
        role="navigation"
        aria-label="{{ ariaLabel }}"
        data-tabbar-name="{{ tabBarName }}"
        data-tabbar-type="tab-bar"
      >
        <ul
          class="{{ listClasses }} {{ linkBaseClasses }} {{ linkHoverClasses }} {{ linkFocusClasses }} {{ linkActiveClasses }}"
          data-tabbar-list
        >
          {% for item in items %}
            <li
              class="{{ listItemClasses }}"
              role="presentation"
              data-tabbar-item
            >
              {{ renderLink({
                  name: item.linkName,
                  datas: options.linkDatas,
                  iconDatas: options.iconDatas,
                  tooltipDatas: options.tooltipDatas
              }) }}
            </li>
          {% endfor %}
        </ul>
      </nav>
    {% endif %}
  {% endif %}
{% endmacro %}

