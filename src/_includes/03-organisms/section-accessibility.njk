#}

{% macro renderSectionAccessibility(options) %}
  {# Import sub-component #}
  {% from "01-atoms/heading.njk" import renderHeading %}

  {# Validate required props #}
  {% if not options.datas %}
    <span class="error" role="alert">Error: Missing required prop (datas)</span>
  {% elif not options.name %}
    <span class="error" role="alert">Error: Missing required prop (name)</span>
  {% else %}
    {# Find section using universal filter #}
    {% set sectionData = options.datas | findByName(options.name) %}

    {# Render section or error message #}
    {% if not sectionData %}
      <span class="error" role="alert">Section not found: {{ options.name }}</span>
    {% else %}
      {# Render section element - Accessibility statement semantic pattern #}
      {# WCAG 2.2 AA: Accessibility statements should be in a region landmark #}
      {# Source: https://www.w3.org/WAI/WCAG22/Understanding/parsing.html #}
      <section 
        role="{{ sectionData.role }}"
        aria-label="{{ sectionData.ariaLabel }}"
        data-section-name="{{ sectionData.name }}"
        data-section-type="section-accessibility"
        data-section-variant="{{ sectionData.variant }}"
      >
        
        <div data-section-container>
          
          {# Section heading - Main accessibility statement title #}
          {% if sectionData.headingName %}
            <div data-section-heading>
              {{ renderHeading({
                  name: sectionData.headingName,
                  datas: options.headingDatas
              }) }}
            </div>
          {% endif %}
          
          {# Section content - Direct text from JSON #}
          {# For real accessibility statements, content would be more structured #}
          {% if sectionData.content %}
            <div data-section-content>
              <p>{{ sectionData.content }}</p>
            </div>
          {% endif %}
          
        </div>
        
      </section>
    {% endif %}
  {% endif %}
{% endmacro %}

