{# ┌─────────────────────────────────────────────────────────┐
   │ ATOM › Chip Multiselect                                 │
   │ Selectable/removable chips with consistent styling      │
   └─────────────────────────────────────────────────────────┘ #}

{#
  Usage — Summon HAT Components Wisely:
    {% from "01-atoms/chip-multiselect.njk" import renderChipMultiselect %}

    {{ renderChipMultiselect({
        name: "fire",
        datas: atoms["chip-multiselects"]
    }) }}

  Props:
    - options.name (string): Chip identifier
    - options.datas (object): Chip configuration data

  @created 2025-01-15
#}

{% macro renderChipMultiselect(options) %}
  {# Initialize chipMultiselectData as null before searching #}
  {% set chipMultiselectData = null %}

  {# Find the chip multiselect matching the requested name in the data collection #}
  {% for chipMultiselect in options.datas["chip-multiselects"] %}
    {% if chipMultiselect.name == options.name %}
      {% set chipMultiselectData = chipMultiselect %}
    {% endif %}
  {% endfor %}

  {# Get global style that applies to all chip multiselects #}
  {% set globalStyle = options.datas.globalStyle %}

  {# Render chip multiselect if data was found #}
  {% if chipMultiselectData %}
    {# Set up base classes and state classes for the chip #}
    {% set baseClasses = globalStyle %}
    {% set stateClasses = {
      'default': options.datas.variants.default,
      'hover': options.datas.variants.hover,
      'focus': options.datas.variants.focus,
      'disabled': options.datas.variants.disabled
    } %}

    <span class="{{ baseClasses }} {{ stateClasses.default }}" onfocus="this.className='{{ baseClasses }} {{ stateClasses.focus }}'" onblur="this.className='{{ baseClasses }} {{ stateClasses.default }}'" onmouseover="this.className='{{ baseClasses }} {{ stateClasses.hover }}'" tabindex="0" data-chip-multiselect="{{ options.name }}">
      {{ chipMultiselectData.text }}
      {# Render close/remove button with SVG icon #}
      <button type="button" class="{{ options.datas.closeButtonStyle }}" data-dismiss="data-dismiss" aria-label="Remove {{ chipMultiselectData.text }}">
        <svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20" fill="currentColor">
          <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z"/>
        </svg>
      </button>
    </span>
  {% else %}
    {# Display error message if chip multiselect not found #}
    <span>Chip Multiselect not found:
      {{ options.name }}</span>
  {% endif %}
{% endmacro %}

