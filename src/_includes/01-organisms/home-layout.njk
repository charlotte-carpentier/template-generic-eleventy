        {# Tab-sections (30%) - Prend 30% de l'espace disponible #}
        <section class="home-layout__tabs xl:w-fit xl:flex-shrink-0 xl:min-w-0 xl:max-h-[800px] xl:overflow-hidden" aria-label="Contenu principal">
          {{ renderTabSections({ 
