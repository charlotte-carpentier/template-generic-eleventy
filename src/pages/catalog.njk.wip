---
title: "Catalogue de nos composants HAT"
description: "Vue d'ensemble de tous les composants réutilisables pour le développement et les tests"
layout: "04-core/base.njk"
permalink: "/catalog/"
tags: ["catalog", "development"]
hideHeaderFooter: true
eleventyExcludeFromCollections: true
---

{# Imports #}
{% from "01-atoms/button.njk" import renderButton %}
{% from "01-atoms/tag.njk" import renderTag %}
{% from "01-atoms/icon.njk" import renderIcon %}
{% from "02-molecules/card.njk" import renderCard %}
{% from "02-molecules/toast.njk" import renderToast %}
{% from "03-organisms/navigation.njk" import renderNavigation %}
{% from "03-organisms/section-hero.njk" import renderSectionHero %}

<div class="container mx-auto px-6 py-10">

  {# ATOMS #}
  <section class="mb-12">
    <h2 class="text-2xl font-bold mb-6">Atoms</h2>
    <div class="grid gap-8 md:grid-cols-2">
      <div class="p-4 bg-gray-50 rounded">
        <h3 class="text-lg font-semibold mb-2">Button</h3>
        {# safe default to avoid crashes if data missing #}
        {{ renderButton({
            name: "default",
            datas: atoms.buttons | default({}),
            icons: atoms.icons | default({})
          }) }}
      </div>

      <div class="p-4 bg-gray-50 rounded">
        <h3 class="text-lg font-semibold mb-2">Tag</h3>
        {{ renderTag({ name: "sample", datas: atoms.tags | default({}) }) }}
      </div>
    </div>
  </section>

  {# MOLECULES #}
  <section class="mb-12">
    <h2 class="text-2xl font-bold mb-6">Molecules</h2>
    <div class="grid gap-8 md:grid-cols-2">
      <div class="p-4 bg-gray-50 rounded">
        <h3 class="text-lg font-semibold mb-2">Card</h3>
        {{ renderCard({
            name: "sample_card",
            variant: "default",
            datas: molecules.cards | default({}),
            images: atoms.images | default({}),
            headings: atoms.headings | default({}),
            buttons: atoms.buttons | default({})
          }) }}
      </div>

      <div class="p-4 bg-gray-50 rounded">
        <h3 class="text-lg font-semibold mb-2">Toast</h3>
        {{ renderToast({ name: "info", datas: molecules.toasts | default({}), icons: atoms.icons | default({}) }) }}
      </div>
    </div>
  </section>

  {# ORGANISMS #}
  <section class="mb-12">
    <h2 class="text-2xl font-bold mb-6">Organisms</h2>
    <div class="space-y-8">
      <div class="p-4 bg-gray-50 rounded">
        <h3 class="text-lg font-semibold mb-2">Navigation</h3>
        {{ renderNavigation({ name: "main", datas: organisms.navigations | default({}), links: atoms.links | default({}) }) }}
      </div>

      <div class="p-4 bg-gray-50 rounded">
        <h3 class="text-lg font-semibold mb-2">Section Hero</h3>
        {{ renderSectionHero({
            name: "hero_default",
            datas: organisms["section-heros"] | default({}),
            headings: atoms.headings | default({}),
            buttons: atoms.buttons | default({}),
            images: atoms.images | default({})
          }) }}
      </div>
    </div>
  </section>

</div>