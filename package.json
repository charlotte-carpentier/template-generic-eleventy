{
  "name": "template-generic-eleventy",
  "version": "1.0.0",
  "description": "Generic Eleventy template with TailwindCSS and Decap CMS",
  "main": "index.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf public/",
    "dev": "npx concurrently \"npm run watch:css\" \"eleventy --serve --watch\"",
    "dev:fresh": "npm run clean && npm run dev",
    "start": "npm run dev",
    "build": "npm run clean && cross-env NODE_ENV=production npm run test:run && npm run build:images && npm run build:css && eleventy",
    "test": "vitest",
    "lint": "npm run lint:css",
    "build:css": "cross-env NODE_ENV=production postcss src/assets/styles/input.css -o public/output.css",
    "build:images": "node bin/sync-image-sizes.js",
    "watch:css": "postcss src/assets/styles/input.css -o public/output.css -w",
    "test:coverage": "vitest run --coverage",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "lint:css": "stylelint 'src/assets/styles/**/*.css'",
    "sprites": "bin/generate-sprite.sh"
  },
  "keywords": [
    "eleventy",
    "tailwindcss",
    "decap-cms",
    "template"
  ],
  "author": "Charlotte Carpentier",
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "not dead"
  ],
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-upgrade-help": "^3.0.1",
    "@tailwindcss/postcss": "^4.1.13",
    "@vitest/ui": "^4.0.15",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "cssnano": "^7.1.1",
    "jsdom": "^25.0.1",
    "nunjucks": "^3.2.4",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "rimraf": "^6.1.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "tailwindcss": "^4.1.13",
    "vitest": "^4.0.15"
  }
}