{
  "name": "template-generic-eleventy",
  "version": "1.0.0",
  "description": "Generic Eleventy template with TailwindCSS and Decap CMS",
  "main": "index.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build:css": "postcss src/assets/styles/input.css -o public/output.css",
    "watch:css": "postcss src/assets/styles/input.css -o public/output.css -w",
    "start": "npx concurrently \"npm run watch:css\" \"eleventy --serve --watch\"",
    "build": "cross-env NODE_ENV=production npm run build:css && eleventy",
    "sprites": "./scripts/generate-sprite.sh"
  },
  "keywords": [
    "eleventy",
    "tailwindcss",
    "decap-cms",
    "template"
  ],
  "author": "Charlotte Carpentier",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-upgrade-help": "^3.0.1",
    "@tailwindcss/postcss": "^4.1.13",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "cssnano": "^7.1.1",
    "nunjucks": "^3.2.4",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.13"
  }
}
